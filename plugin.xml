    <platform name="ios">		
		
		<config-file parent="NSCameraUsageDescription" target="*-Info.plist">
            <string>To capture images of your recipes</string>
        </config-file>
        <config-file parent="NSPhotoLibraryUsageDescription" target="*-Info.plist">
            <string>To select images for your recipes</string>
        </config-file>
		
		<config-file parent="ITSAppUsesNonExemptEncryption" mode="add" target="*-Info.plist">
            <false/>
        </config-file>
        <config-file parent="ITSAppUsesNonExemptEncryption" mode="overwrite" target="*-Info.plist">
            <false/>
        </config-file>
		
		<config-file  parent="SocialSharingExcludeActivities" mode="add" target="*-Info.plist">
            <array>
                <string>com.apple.UIKit.activity.AssignToContact</string>
                <string>com.apple.UIKit.activity.CopyToPasteboard</string>
